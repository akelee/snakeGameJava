import javax.swing.*;
import java.awt.*;

public class GameFrame extends JFrame {

    GameFrame(){
        this.add(new GamePanel());
        this.setTitle("Snake");
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.setResizable(false);
        this.pack(); //if add components to JFrame, this.pack fn takesJFrame + fit it snugly around components added to frame
        this.setVisible(true);
        this.setLocationRelativeTo(null);// this window to appear in middle of screen
    }
}
